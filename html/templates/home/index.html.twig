{% extends 'base.html.twig' %}

{% block title %}Meenos{% endblock %}

{% block stylesheets %}<link rel="stylesheet" href="{{ asset('/css/home.css') }}">{% endblock %}

{% block body %}
<div class="container home-container">
    <h1 class="mb-5">Acceuil</h1>
    {% for conference in conferences %}
    <div class="mb-4 pl-5 pr-5 conf-min">
        <div class="mb-3"><a href="{{ path('conference', {'id': conference.id}) }}" class="title-link">{{ conference.title }}</a></div>
        <div class="d-flex">
            <div class="col-md-4">
                <img class="conf-img" src="{{ asset('/images/' ~ conference.image )}}"/>
            </div>
            <div class="col-md-8 text-right">
                <p>{{ conference.summary }}</p>
                <p>//Rajouter les Ã©toiles here</p>
            </div>
        </div>
    </div>
    {% endfor %}

    <div class="separator mt-5"></div>

    {# PAS TOUCHER !!!!!!!#}
    <nav class="mt-5" aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            {%  if page == 1  %}
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
            {% else %}
            <li class="page-item">
                <a class="page-link" href="{{ page-1 }}" >Previous</a>
            </li>
            {% endif %}
            {% for i in 1..nbPage %}
            <li class="page-item"><a class="page-link" href="{{ i }}">{{ i }}</a></li>
{% endfor %}
            {%  if page == nbPage %}
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Next</a>
            </li>
            {% else %}
            <li class="page-item">
                <a class="page-link" href="{{ page+1 }}">Next</a>
            </li>
            {% endif %}
        </ul>
    </nav>



</div>
{% endblock %}
